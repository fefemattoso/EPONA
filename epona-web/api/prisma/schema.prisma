generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Usuario{
  id Int   @id @default(autoincrement())
  nome String
  email String   @unique
  senha String
  nascimento DateTime 
  criadoEm DateTime @default(now())
  lista Lista[] @relation("faz")
  agenda Agenda[] @relation("salva")
}

model Atividade{
  id Int @id @default(autoincrement())
  titulo String
  descricao String?
  data DateTime
}

model Lista{
  id Int @id @default(autoincrement())
  descricao String
  usuarioId Int
  usuario Usuario @relation("faz", fields: [usuarioId], references: [id])
}

model Agenda{
  id Int @id @default(autoincrement())
  titulo String
  descricao String?
  data DateTime
  usuarioId Int
  usuario Usuario @relation("salva", fields: [usuarioId], references: [id])
}